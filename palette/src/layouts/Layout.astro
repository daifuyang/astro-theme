---
import "animate.css";
import Header from "../components/header/header";
import Footer from "../components/footer/footer";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="zh">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
  </head>
  <body>
    <Header client:load />
    <main
      style={{
        paddingTop: "var(--header-height,107px)"
      }}
    >
      <slot />
    </main>
    <Footer />
  </body>
</html>
<style is:global>
  @font-face {
    font-family: HarmonyOS_Sans_SC_Medium;
    font-style: normal;
    font-display: swap;
    src:
      url("/fonts/HarmonyOS_Sans_SC_Medium.woff2") format("woff2"),
      url("/fonts/HarmonyOS_Sans_SC_Medium.woff") format("woff");
  }

  :root {
    --primary: #2299dd;
    --secondary: #fff;
    --bg-body: #f6f8fb;
    --night-bg-body: #192039;
    --night-bg-secondary: #1f2745;
    --night-color-dark: #a4a8b4;
    --color-title: #2c2e3b;
    --color-secondary: #828a92;
    --night-border-light: #3c4560;
  }

  html,
  body {
    font-family:
      "HarmonyOS_Sans_SC_Medium",
      pingfang SC;
    background-color: var(--bg-body);
    line-height: 1.8;
    color: var(--color-title);
  }

  header {
    box-shadow: 0px 5px 40px 0px rgba(17, 58, 93, 0.1);
  }

  header .category-1::before {
    content: "";
    width: 8px;
    height: 8px;
    background: #fff;
    position: absolute;
    top: -5px;
    transform: rotate(45deg);
    left: 5px;
  }

  header .navbar ul li:hover > a {
    color: var(--primary);
  }

  header .navbar > ul > li:hover > ul {
    opacity: 1;
    visibility: visible;
  }

  header .navbar > ul > li:hover > ul > li > ul {
    position: absolute;
    top: 0;
    right: 0;
    transform: translateX(0%);
  }

  header .navbar > ul > li:hover > ul > li:hover > ul {
    transform: translateX(100%);
    opacity: 1;
    visibility: visible;
  }

  header .navbar > ul > li:hover > ul > li:hover > ul > li:hover {
    opacity: 1;
    visibility: visible;
  }
</style>
